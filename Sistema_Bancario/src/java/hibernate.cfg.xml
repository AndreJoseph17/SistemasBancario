<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.enable_lazy_load_no_trans">true</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/bancodb</property>
    <property name="hibernate.connection.username">sistema</property>
    <property name="hibernate.connection.password">1234</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping resource="com/sistema_bancario/model/pojo/Planilla.hbm.xml"/>
    <mapping resource="com/sistema_bancario/model/pojo/TipoCuenta.hbm.xml"/>
    <mapping resource="com/sistema_bancario/model/pojo/Transaccion.hbm.xml"/>
    <mapping resource="com/sistema_bancario/model/pojo/TipoServicio.hbm.xml"/>
    <mapping resource="com/sistema_bancario/model/pojo/Cuenta.hbm.xml"/>
    <mapping resource="com/sistema_bancario/model/pojo/TipoTransaccion.hbm.xml"/>
    <mapping resource="com/sistema_bancario/model/pojo/Servicio.hbm.xml"/>
    <mapping resource="com/sistema_bancario/model/pojo/Telefono.hbm.xml"/>
    <mapping resource="com/sistema_bancario/model/pojo/Email.hbm.xml"/>
    <mapping resource="com/sistema_bancario/model/pojo/PropietarioCuenta.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
